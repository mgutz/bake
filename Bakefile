function private {
    echo in private
}


#. Builds the project
function build {
    # ensures clean is called only once
    invoke clean
    bake_ok building ...
}


#. Cleans the project
function clean {
    bake_ok "cleaning ..."
    private
}


#. Compiles coffee scripts
function coffee {
    outdated build src || return 0
    coffee -c -o build src
    bake_ok "coffe" "compiled"
}


function on_task_not_found {
    echo "Task not found $1"
}

# vim:filetype=sh:
